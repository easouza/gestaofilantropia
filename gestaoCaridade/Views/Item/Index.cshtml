@model IEnumerable<gestaoCaridade.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h2>Item</h2>

<p>
    <a asp-action="Create">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataAquisicao)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataAquisicao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdItem">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdItem">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdItem">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
