@model gestaoCaridade.Models.ArtesaoEvento

@{
    ViewData["Title"] = "Create";
}

<h2>Adicionar Artesão a um evento</h2>

<h4>Artesão</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdArtesao" class="control-label"></label>
                <select asp-for="IdArtesao" class ="form-control" asp-items="ViewBag.IdArtesao"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdEvento" class="control-label"></label>
                <select asp-for="IdEvento" class ="form-control" asp-items="ViewBag.IdEvento"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Adcionar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

