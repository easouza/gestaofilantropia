@model gestaoCaridade.Models.ArtesaoEvento

@{
    ViewData["Title"] = "Delete";
}

<h2>Excluir</h2>

<h3>Tem certeza que desja desvincular um artesão?</h3>
<div>
    <h4>Artesão e evento</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ArtesaoSelecionado)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ArtesaoSelecionado.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EventoVinculado)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EventoVinculado.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdArtesaoEvento" />
        <input type="submit" value="Excluir" class="btn btn-default" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
