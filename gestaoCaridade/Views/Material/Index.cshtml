@model IEnumerable<gestaoCaridade.Models.Material>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Material</h2>

<p>
    <a asp-action="Create">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataAquisicao)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.EventoSelecionado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataAquisicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventoSelecionado.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IDMaterial">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IDMaterial">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IDMaterial">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
