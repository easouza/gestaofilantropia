@model IEnumerable<gestaoCaridade.Models.ReceitaArtesao>

@{
    ViewData["Title"] = "Index";
}

<h2>Receita artesão</h2>

<p>
    <a asp-action="Create">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Valor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comissao)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comissao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdReceitaArtesao">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdReceitaArtesao">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdReceitaArtesao">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
