@model gestaoCaridade.Models.ChecklistEvento

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

<h4>ChecklistEvento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IDChecklist" />
            <div class="form-group">
                <label asp-for="IDEvento" class="control-label"></label>
                <select asp-for="IDEvento" class="form-control" asp-items="ViewBag.IDEvento"></select>
                <span asp-validation-for="IDEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ReservaLocal" /> @Html.DisplayNameFor(model => model.ReservaLocal)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

